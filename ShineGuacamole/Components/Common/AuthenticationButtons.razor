@inherits ShineComponentBase<AuthenticationButtons>

@inject NavigationManager Navigation

@if (CurrentUser?.Identity?.IsAuthenticated == true)
{
    <MudIconButton Icon="@MaterialDesignIcons.Normal.Logout"
                   Variant="Variant.Text" Size="Size.Small"
                   title="Logout" Color="Color.Error"
                   Class="mx-1" DropShadow="false" OnClick="Logout">
    </MudIconButton>
}
else
{
    <MudIconButton Icon="@MaterialDesignIcons.Normal.Login"
                   Variant="Variant.Text" Size="Size.Small"
                   title="Login" Color="Color.Success"
                   Class="mx-1" DropShadow="false" OnClick="Login">
    </MudIconButton>
}

@code {

    /// <summary>
    /// Redirect to log in url.
    /// </summary>
    private void Login()
    {
        try
        {
            Navigation.NavigateTo("MicrosoftIdentity/Account/SignIn", true);
        }
        catch (Exception ex)
        {
            NotifyAndLogError("Failed to login.", ex);
        }
    }

    /// <summary>
    /// Redirect to log out url.
    /// </summary>
    private void Logout()
    {
        try
        {
            Navigation.NavigateTo("MicrosoftIdentity/Account/SignOut", true);
        }
        catch (Exception ex)
        {
            NotifyAndLogError("Failed to logout.", ex);
        }
    }
}
